all: decoder grabbufr dumpdata splitdump

decoder:
	f95 -o ../bin/decoder_solaris BUFR_1_07.f RRS_Decoder_1_04.EOL.f

dumpdata:
	f95 -o ../bin/dumpdata_solaris BUFR_1_07.f DumpData.f

grabbufr:
	f95 -o ../bin/unixbufr_solaris BUFR_1_07.f unixbufr.f

splitdump:
	f95 -o ../bin/splitdump_solaris BUFR_1_07.f split_dump.f
deploy: all
	chmod 777 /net/work/bin/extractors/NWS_RRS/*_solaris;
	cp ../bin/*_solaris /net/work/bin/extractors/NWS_RRS;
	chmod 555 /net/work/bin/extractors/NWS_RRS/*_solaris;
	chgrp cds /net/work/bin/extractors/NWS_RRS/*_solaris;
	chmod -R 777 /net/web/dmg/html/software/tools/upper_air/NWS_RRS_bufr_extractor/*;
	cp -r ../docs/* /net/web/dmg/html/software/tools/upper_air/NWS_RRS_bufr_extractor;
	chmod -R 555 /net/web/dmg/html/software/tools/upper_air/NWS_RRS_bufr_extractor/*;
	chgrp -R cds /net/web/dmg/html/software/tools/upper_air/NWS_RRS_bufr_extractor
