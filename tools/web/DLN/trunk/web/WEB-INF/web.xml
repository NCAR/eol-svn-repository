<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  <display-name>JOSS DPG Applications</display-name>
  <description>
     Webapp to hold anything developed by the Data Processing Group
  </description>

	<session-config>
		<session-timeout>60</session-timeout>
	</session-config>

	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Data Loading Notes</web-resource-name>
			<url-pattern>/dln/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>dln</role-name>
		</auth-constraint>
	</security-constraint>

	<login-config>
		<auth-method>BASIC</auth-method>
		<realm-name>Data Loading Notes Application</realm-name>
	</login-config>	

	<security-role>
		<description>DLN security</description>
		<role-name>dln</role-name>
	</security-role>
</web-app>
