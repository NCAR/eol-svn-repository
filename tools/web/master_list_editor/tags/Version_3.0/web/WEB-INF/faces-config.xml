<?xml version='1.0' encoding='UTF-8'?>


<!DOCTYPE faces-config PUBLIC
  "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.1//EN"
  "http://java.sun.com/dtd/web-facesconfig_1_1.dtd">

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config>

    <component>
        <component-type>dmg.jsf.Tree</component-type>
        <component-class>dmg.jsf.component.UITree</component-class>
    </component>
    
    <managed-bean>
        <managed-bean-name>manager</managed-bean-name>
        <managed-bean-class>dmg.ml.manager.MasterListManager</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>userManager</managed-bean-name>
        <managed-bean-class>dmg.ml.manager.UserManager</managed-bean-class>
        <managed-bean-scope>page</managed-bean-scope>
    </managed-bean>
    
    <navigation-rule>
        <from-view-id>/main.jsp</from-view-id>
        <navigation-case>
            <from-outcome>self</from-outcome>
            <to-view-id>/main.jsp</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    
    <render-kit>
        <renderer>
            <component-family>dmg.jsf.Tree</component-family>
            <renderer-type>dmg.jsf.DatasetList</renderer-type>
            <renderer-class>dmg.jsf.render.DatasetListRenderer</renderer-class>
        </renderer>
        <renderer>
            <component-family>dmg.jsf.Tree</component-family>
            <renderer-type>dmg.jsf.Tree</renderer-type>
            <renderer-class>dmg.jsf.render.TreeRenderer</renderer-class>
        </renderer>
    </render-kit>
 
</faces-config>
