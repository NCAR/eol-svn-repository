################################################################################
# Version 4
# Template for plotting CEOP data with plot command generated within script
# and passed here complete. This allows us to plot either single or multiple
# heights per plot - JAG 1/14/04
#
# Template for plotting CEOP data with AWK command moved to script to increase
# efficiency. Old version of code was taking too long. - JAG 1/12/04
################################################################################
set terminal postscript landscape monochrome dashed "Helvetica" 14

#-------------------------------------------------------------------------------
# graph title
#-------------------------------------------------------------------------------
set title "CEOP CAMP XPARAMETERX Station XSTATION XHEIGHTX"

#-------------------------------------------------------------------------------
# other
#-------------------------------------------------------------------------------
set missing "-999.99"
set nokey

#-------------------------------------------------------------------------------
# x-axis stuff
#-------------------------------------------------------------------------------
set timefmt "%Y/%m/%d"
set xdata time
set xlabel "Date" 0,0
set xrange ["2002/10/01":"2003/03/31"]
set format x "%Y/%m/%d"

#-------------------------------------------------------------------------------
# A temporary awk program is created to pull out the needed columns
# it adds the '+' to the data format, for some reason ' ' was causing 
# an error.
#-------------------------------------------------------------------------------
set timefmt "%Y/%m/%d %H:%M"

#-------------------------------------------------------------------------------
# y-axis
#-------------------------------------------------------------------------------
set ylabel "XPARAMETERX (XUNITSX)" 0,0

#-------------------------------------------------------------------------------
set output 'XOUTFILEX'
#-------------------------------------------------------------------------------
XPLOTSPECX
