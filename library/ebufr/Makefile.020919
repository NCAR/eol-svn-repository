# simple makefile for hrly qcf converts

#FFLAGS=-u -fast -O3
FFLAGS=-u

# where to find libs
LIBPATH="/data10/stott/libs"

LIBS = -l_new
#LIBS = -leb -l_new

all: nh2e nh2e_4dyr mknomh

h2e: h2e.f qcf.inc
	f77 $(FFLAGS) -o h2e h2e.f -L$(LIBPATH) $(LIBS)

nh2e: nh2e.f qcf.inc
	f77 $(FFLAGS) -xld -o nh2e nh2e.f -L$(LIBPATH) $(LIBS)

nh2e_4dyr: nh2e_4dyr.f qcf.inc
	f77 $(FFLAGS) -xld -o nh2e_4dyr nh2e_4dyr.f -L$(LIBPATH) $(LIBS)

mknom: mknom.f qcf.inc
	f77 $(FFLAGS) -o mknom mknom.f -L$(LIBPATH) -lfest

mknomh: mknomh.f qcf.inc
	f77 $(FFLAGS) -o mknomh mknomh.f -L$(LIBPATH) -lfest

clean:
	rm -f core fort.* *.trace *.o
