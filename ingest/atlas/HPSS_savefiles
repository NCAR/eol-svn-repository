use POSIX "strftime";

sub asctime {
    my($time)=@_;
    return POSIX::strftime("%D %T %Z",localtime($time));
}

sub log {
#    open(LOG,">>$log");
#    print LOG &asctime(time),": @_\n";
#    print &asctime(time),": @_\n" if $verbose;
     print &asctime(time),": @_\n";
#    close(LOG);
