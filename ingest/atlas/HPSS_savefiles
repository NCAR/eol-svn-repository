    foreach $run (qw(00 06 12 18)) {
	$file="${date}${run}00_eta216.grib";
	#    system("$CAT $srcdir/eta.T${run}Z* > $tmpdir/$file");
	#    if ((-s "$tmpdir/$file") > (-s "$ldmdir/$file")) {
