    $etadate=sprintf("%02d%02d%02d", $year%100, $mon, $mday);
    $srcdir="/ingest/ingest/atlas/ncepc/eta/alaska.$etadate";
    $ldmdir="/ingest/ldm/data/hrs/raw";
