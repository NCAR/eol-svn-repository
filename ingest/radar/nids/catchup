#!/bin/perl

foreach $i (qw( 20040406  20040425 20040407  20040426 20040408  20040427
	    20040409  20040428 20040410  20040429 20040411  20040430
	    20040324  20040412  20040501 20040325  20040413  20040502
	    20040326  20040414  20040503 20040327  20040415  20040504
	    20040328  20040416  20040505 20040329  20040417  20040506
	    20040330  20040418  20040507 20040331  20040419 20040401
	    20040420 20040402  20040421 20040403  20040422 20040404
	    20040423 20040405  20040424)) {
    print "Sending files for $i\n";
    chdir($i) or die "Couldn't cd to $i, $!";
    system("/bin/ftp -n ftp.ncdc.noaa.gov < ../cmds");
    chdir("..") or die "Couldn't cd to .., $!";
}

